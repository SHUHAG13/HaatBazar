Create table categoryMaster(
categoryId int  identity(1,1),
categoryName nvarchar(100) not null,
imageName nvarchar(100) not null,
constraint PK_categoryMaster_categoryId primary key(categoryId) 
);

Create table childCategoryMaster(
childCategoryId int  identity(1,1),
categoryId int not null,
childCategoryName nvarchar(100) not null,
CONSTRAINT PK_childCategoryMaster_childCategoryId PRIMARY KEY(childCategoryId),
CONSTRAINT FK_childCategoryMaster_categoryMaster FOREIGN KEY(categoryId) REFERENCES categoryMaster(categoryId)
);

Create Table productMaster(
productId int identity(1,1),
childCategoryId int not null,
shortName nvarchar(50) not null,
fullName nvarchar(200) not null,
price decimal(10,2) not null,
description nvarchar(1000) not null,
thumbnailImage nvarchar(50) not null,
productImage nvarchar(100) not null,
sku nvarchar(50) not null,
CONSTRAINT PK_productMaster_productId PRIMARY KEY(productId),
CONSTRAINT FK_productMaster_childCategoryMaster FOREIGN KEY(childCategoryId) REFERENCES childCategoryMaster(childCategoryId)
);

CREATE TABLE customerMaster (
    customerId int identity(1,1),
    customerName nvarchar(50) not null,
    mobileNo nvarchar(50) not null,
    email nvarchar(100) not null,
    city nvarchar(50) not null,
    address nvarchar(100) not null,
    pinCode nvarchar(6) not null,
    CONSTRAINT PK_customerMaster_customerId PRIMARY KEY(customerId)
);

Create Table cartMasterTbl(
cartId int identity(1,1),
customerId int not null,
productId int not null,
quantity int not null,
addedDate datetime not null,
modifiedDate datetime not null,
CONSTRAINT PK_cartMasterTbl_cartId PRIMARY KEY(cartId),
CONSTRAINT FK_cartMasterTbl_customerMaster FOREIGN KEY(customerId) REFERENCES customerMaster(customerId),
CONSTRAINT FK_cartMasterTbl_productMaster FOREIGN KEY(productId) REFERENCES productMaster(productId)
);

Create Table orderMaster(
orderId int identity(1,1),
customerId int ,
orderDate datetime not null,
totalAmount decimal(12,2) not null,
paymentNaration varchar(50) null,
CONSTRAINT PK_orderMaster_orderId PRIMARY KEY(orderId),
CONSTRAINT FK_orderMaster_customerMaster FOREIGN KEY(customerId) REFERENCES customerMaster(customerId)
);

Create Table orderDetailsTbl(
orderDetailId int identity(1,1),
orderId int not null,
productId int not null,
quantity int not null,
CONSTRAINT PK_orderDetailsTbl_orderDetailId PRIMARY KEY(orderDetailId),
CONSTRAINT FK_orderDetailsTbl_orderMaster FOREIGN KEY(orderId) REFERENCES orderMaster(orderId),
CONSTRAINT FK_orderDetailsTbl_productMaster FOREIGN KEY(productId) REFERENCES productMaster(productId)
);


